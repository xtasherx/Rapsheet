<div id="wrapper">

    <!-- Header with Logo and Navigation -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="/index"><img class="logo" src="/public/assets/rapsheet-logo.png" alt="rapsheet logo"> </a>
            </nav>
        </header>

        <div class="bandIntro mt-4 mb-3 row">
            <h2 class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">{{ venue_ name  }}</h2>
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 d-flex justify-content-end">
                <a href="/venCal"><button type="button" class="btn btn-dark mx-2">Calendar</button></a>
                <a href="#"><button type="button" class="btn btn-dark mx-2">Contact</button></a>

            </div>
        </div>

        <div class="bandHead js-flickity" data-flickity-options='{ "wrapAround": true, "pageDots": false, "setGallerySize": false, "autoPlay": true, "lazyLoad": true }'>

            <div class="gallery-cell">
                <img class="gallery-cell-img" src="/public/assets/luna-music-bar-1.jpg">
            </div>
            <div class="gallery-cell">
                <img class="gallery-cell-img" src="/public/assets/luna-music-bar-2.jpg">
            </div>
            <div class="gallery-cell">
                <img class="gallery-cell-img" src="/public/assets/luna-music-bar-3.jpg">
            </div>

            {{!-- {{#each venues}}
                <div class="gallery-cell">
                    <img class="gallery-cell-img" src="{{venueHead}}">
                </div>
            {{/each}} --}}

        </div>

        <div id="bandDetails">
            <ul class="row justify-content-center">
                <li class="px-4">Size: {{ size }} </li>
                <li class="px-4">Location:  {{ location }} </li>
                <li class="px-4">Rate: {{ payment }} </li>
            </ul>
        </div>

        <main>
            <div class="venueInfo row mb-5">
                <p id="bandDesc" class="col-12 col-lg-6">
                    {{ venue_info }}
                </p>
                <img class="col-12 col-lg-5" src="https://via.placeholder.com/400x200">
            </div>

            <section class="related">
                <h4 class="mt-5 text-center">Related</h4>
                <div class="row col-12 justify-content-center"></div>
                <ul class="row d-flex justify-content-center flex-wrap">
                    <img class="member mx-3 my-3" src="https://via.placeholder.com/150">
                    <img class="member mx-3 my-3" src="https://via.placeholder.com/150">
                    <img class="member mx-3 my-3" src="https://via.placeholder.com/150">
                    <img class="member mx-3 my-3" src="https://via.placeholder.com/150">
                </ul>
    </div>
    </section>

    </main>
    </div>

    <!-- Footer -->
    <footer class="shadow-lg pt-3 pb-1.5 fixed-bottom">
        <p class="text-center">&COPY; Footer</p>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="../js/venueProfile.js"></script>