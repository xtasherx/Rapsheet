<body>
    <div id="wrapper">

        <div class="bandIntro mt-4 mb-3 row">
            <h2 class="col-12 col-md-6 bandNameH2">{{ bandName }}</h2>
            <div class="col-12 col-md-6 d-flex justify-content-end">
                <a href="/bandCal"><button type="button" class="btn btn-dark mx-2">Schedule</button></a>
                <a href="#"><button type="button" class="btn btn-dark mx-2">Contact</button></a>
            </div>
        </div>


        <div class="bandHead js-flickity"
            data-flickity-options='{ "wrapAround": true, "pageDots": false, "setGallerySize": false, "autoPlay": true, "lazyLoad": true }'>

            <div class="gallery-cell">
                <img class="gallery-cell-img" src="../assets/paramore-1.jpg">
            </div>
            <div class="gallery-cell">
                <img class="gallery-cell-img" src="../assets/paramore-3.jpg">
            </div>
            <div class="gallery-cell">
                <img class="gallery-cell-img" src="../assets/paramore-4.jpg">
            </div>


        </div>




        <div id="bandDetails">
            <ul class="row justify-content-center">
                <li class="px-4"><strong>Genre: &ensp;</strong>{{ bandGenre }}</li>
                <li class="px-4 bandLoc"><strong>Location: &ensp;</strong>{{ city }}, {{ state }}</li>
                <li class="px-4"><strong>Rate: &ensp;</strong>{{ rate }}</li>

            </ul>
        </div>

        <main>

            <p id="bandDesc" class="col-12 col-lg-8">
                {{ bandBio }}
            </p>

            <h4 class="mt-5">Members</h4>


            <ul class="row d-flex align-content-center flex-wrap">
                <img class="member mx-3 my-3" src="../assets/paramore_haley-williams.jpg" width="200px" height="200px">
                <img class="member mx-3 my-3" src="../assets/paramore_taylor-york.jpg" width="200px" height="200px">
                <img class=" member mx-3 my-3 " src="../assets/paramore_zach-farro.jpg " width="200px " height="200px">
            </ul>

            {{!-- {{#each bands}}
            <ul class="row d-flex align-content-center flex-wrap" >
                <img class="member mx-3 my-3" src="{{mediaURL}}" width="200px" height="200px>
            </ul>
            {{/each}} --}}

            <h4 class="mt-5">Audio</h4>

            {{#each audio}}
            <audio controls class="audio mx-3 my-3">
                <source src="{{bband}}">
                <p>Your browser doesn't support HTML5 audio. Here is a <a href="{{audioURL}}">link to the audio</a>
                    instead.
                </p>
            </audio>
            {{/each}}

            <h4 class="mt-5">Video</h4>

            {{#each video}}
            <div class="videos row d-flex align-content-center flex-wrap">
                <source src="{{videoURL}}">
            </div>
            {{/each}}

        </main>
    </div>

    <!-- Footer -->
    <footer class="shadow-lg pt-3 pb-1.5 fixed-bottom">
        <p class="text-center">&COPY; Footer</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="../js/bandProfile.js"></script>